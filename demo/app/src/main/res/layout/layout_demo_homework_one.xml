<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:orientation="vertical"
    >

  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center_vertical"
      >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="01 Jan 2016, 10:00"
        android:layout_centerInParent="true"
        android:textSize="18sp"
        android:textColor="#000"
        />

    <ImageView
        android:layout_gravity="right"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/ic_appointment"
        android:adjustViewBounds="true"
        android:layout_alignParentRight="true"
        />

  </RelativeLayout>

  <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="6dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="6dp"
        android:background="@color/cardview_light_background"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:weightSum="2"
          android:padding="15dp"
          >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="16dp"
            >

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:ellipsize="end"
              android:text="Moskow to Nizhzy Novakorysko"
              android:textSize="16sp"
              android:textColor="#000"
              android:maxLines="1"
              tools:ignore="HardcodedText"
              />


          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:ellipsize="end"
              android:text="from Kursh Station"
              android:textSize="13sp"
              tools:ignore="HardcodedText"
              />


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@mipmap/ic_train"
              />


          <TextView
              android:layout_marginLeft="4dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:ellipsize="end"
              android:text="082"
              android:textSize="16sp"
              android:textColor="#000"
              tools:ignore="HardcodedText"
              android:id="@+id/textView"
              android:layout_gravity="center"
              />

        </LinearLayout>

      </LinearLayout>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="16dp"
          >

        <LinearLayout
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

          <TextView
              android:layout_width="60dp"
              android:layout_height="wrap_content"
              android:textSize="13sp"
              android:text="Train"
              />

          <TextView
              android:layout_width="60dp"
              android:layout_height="wrap_content"
              android:textSize="18sp"
              android:paddingTop="8dp"
              android:text="082"
              android:textColor="@color/colorAccent"
              />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/left"
            >

          <TextView
              android:layout_width="60dp"
              android:layout_height="wrap_content"
              android:textSize="13sp"
              android:text="Coach"
              />

          <TextView
              android:layout_width="60dp"
              android:layout_height="wrap_content"
              android:textSize="18sp"
              android:paddingTop="8dp"
              android:text="7"
              android:textColor="@color/colorAccent"
              />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/center"
            >

          <TextView
              android:layout_width="60dp"
              android:layout_height="wrap_content"
              android:textSize="13sp"
              android:text="Place"
              />

          <TextView
              android:layout_width="60dp"
              android:layout_height="wrap_content"
              android:textSize="18sp"
              android:paddingTop="8dp"
              android:text="51"
              android:textColor="@color/colorAccent"
              />

        </LinearLayout>



        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Cancel"
            android:textColor="#FFF"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_alignParentRight="true"
            />
      </RelativeLayout>

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="120dp"
          android:src="@mipmap/bg_train"
          android:scaleType="centerCrop"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="70dp"
          android:weightSum="3"
          android:paddingTop="8dp"
          android:paddingBottom="8dp"
          android:background="@color/colorAccent"
          android:gravity="center_vertical"
          >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

          <TextView
              android:layout_width="60dp"
              android:layout_height="wrap_content"
              android:textSize="13sp"
              android:text="Departure"
              android:textColor="#FFF"
              />

          <TextView
              android:layout_width="60dp"
              android:layout_height="wrap_content"
              android:textSize="20sp"
              android:paddingTop="8dp"
              android:text="22:00"
              android:textColor="#FFF"
              />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

          <TextView
              android:layout_width="60dp"
              android:layout_height="wrap_content"
              android:textSize="13sp"
              android:text="Time"
              android:gravity="center"
              android:textColor="#FFF"
              />

          <TextView
              android:layout_width="60dp"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:textSize="18sp"
              android:paddingTop="8dp"
              android:text="5:25"
              android:textColor="#FFF"
              />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

          <TextView
              android:layout_width="60dp"
              android:layout_height="wrap_content"
              android:textSize="13sp"
              android:text="Arrival"
              android:gravity="right"
              android:textColor="#FFF"
              />

          <TextView
              android:layout_width="60dp"
              android:layout_height="wrap_content"
              android:textSize="20sp"
              android:paddingTop="8dp"
              android:text="2:17"
              android:textColor="#FFF"
              android:gravity="right"
              />

        </LinearLayout>

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:weightSum="2"
          android:paddingTop="16dp"
          android:paddingBottom="24dp"
          android:gravity="center_vertical"
          >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            >

          <TextView
              android:layout_width="120dp"
              android:layout_height="wrap_content"
              android:textSize="14sp"
              android:layout_marginLeft="3dp"
              android:text="Kursk Station"
              android:textColor="#212121"
              />

          <TextView
              android:layout_width="120dp"
              android:layout_height="wrap_content"
              android:layout_marginLeft="3dp"
              android:textSize="12sp"
              android:text="Moscow, Zemlyanoi Vo,29"

              />

          <Button
              android:layout_width="wrap_content"
              android:layout_height="40dp"
              android:text="Get Taxi"
              android:textColor="#FFF"
              style="@style/Widget.AppCompat.Button.Colored"

              />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:layout_marginTop="-5dp"
            >


          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="14sp"
              android:layout_marginLeft="3dp"
              android:layout_marginRight="16dp"
              android:text="Moscow Train Station"
              android:ellipsize="end"
              android:maxLines="1"
              android:textColor="#212121"
              />

          <TextView
              android:layout_width="120dp"
              android:layout_height="wrap_content"
              android:layout_marginLeft="3dp"
              android:textSize="12sp"
              android:maxLines="2"
              android:ellipsize="end"
              android:text="Nizhniy Novgorod Komsomolskaya St., 5"
              />

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:layout_marginTop="10dp"
              >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:textColor="#FFF"
                android:layout_marginTop="-5dp"
                app:srcCompat="@mipmap/ic_taxi"
                android:id="@+id/imageView"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginLeft="9dp"
                android:text="2:30"
                android:textColor="#212121"
                />

          </LinearLayout>

        </LinearLayout>

      </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_gravity="bottom|right"
        >

      <TextView
          android:layout_width="100dp"
          android:layout_height="40dp"
          android:text="Print"
          android:gravity="center"
          android:textColor="#212121"
          />

      <TextView
          android:layout_width="100dp"
          android:layout_height="40dp"
          android:text="Share"
          android:gravity="center"
          android:textColor="#212121"
          />

    </LinearLayout>

  </android.support.v7.widget.CardView>

</LinearLayout>
