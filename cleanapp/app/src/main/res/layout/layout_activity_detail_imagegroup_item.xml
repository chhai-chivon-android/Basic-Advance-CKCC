<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

  <data>
    <variable
        name="movie"
        type="com.nuon.peter.demoapp.ui.moviedetail.entity.similar.ResultsItem"
        />
  </data>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            >
          <android.support.v7.widget.CardView
              android:layout_width="200dp"
              android:layout_height="260dp"
              app:cardBackgroundColor="@color/dark"
              app:cardCornerRadius="5dp"
              app:cardElevation="5dp"
              app:cardPreventCornerOverlap="true"
              >
            <ImageView
                android:id="@+id/iv_image_music"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/song_1"
                />

            <com.nuon.peter.demoapp.utils.views.slantextview.SlantedTextView
                android:id="@+id/slanted"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:slantedBackgroundColor="@color/md_deep_purple_A700"
                app:slantedTextSize="18sp"
                app:slantedLength="50dp"
                app:slantedText="@{movie.voteAverage}"
                app:slantedTextColor="@color/white"
                app:slantedMode="right_triangle"
                android:layout_gravity="right"
                />
          </android.support.v7.widget.CardView>
          <TextView
              android:id="@+id/tv_description"
              android:layout_gravity="left"
              android:gravity="left"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@{movie.originalTitle}"
              android:textColor="@color/md_deep_purple_A700"
              android:maxLines="1"
              android:ellipsize="end"
              android:textSize="16sp"
              />
          <TextView
              android:id="@+id/tv_user"
              android:layout_gravity="left"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:maxLines="1"
              android:ellipsize="end"
              android:text="@{movie.releaseDate}"
              android:textColor="@color/white"
              android:textSize="12sp"
              />
        </LinearLayout>
</layout>