<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nuon.peter.demoapp">

  <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
  <uses-permission android:name="android.permission.INTERNET" />

  <application
      android:allowBackup="true"
      android:name=".app.App"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppThemeMaterial">

    <activity
        android:name=".ui.home.activity.HomeNavigationActivity"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
        android:screenOrientation="portrait">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
        android:name=".ui.home.activity.HomeActivity"
        android:screenOrientation="portrait">
    </activity>

    <activity
        android:name=".ui.home.activity.MainActivity"
        android:screenOrientation="portrait">
    </activity>
    <activity
        android:name=".ui.home.activity.NextActivity"
        android:screenOrientation="portrait">
    </activity>
    <activity
        android:name=".ui.moviedetail.activity.MovieDetailActivity"
        android:theme="@style/AppThemeMaterial"
        android:screenOrientation="portrait">
    </activity>
    <activity
        android:name=".ui.moviedetail.activity.TrailerActivity"
        android:theme="@style/Theme.PopcornTime"
        android:screenOrientation="landscape">
    </activity>

  </application>

</manifest>