<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        >

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:scaleType="centerCrop"
          android:src="@mipmap/ic_cd"
          />

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="100dp"
          android:layout_gravity="bottom"
          android:background="@drawable/gradient_bg"
          />

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@drawable/gradient_bg"
          />

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@drawable/gradient_bg"
          />


      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="bottom"
          android:paddingBottom="16dp"
          android:paddingLeft="15dp"
          android:paddingRight="16dp"
          android:paddingTop="16dp"
          android:text="Special Edition for Christmas"
          android:textColor="#FFF"
          android:textSize="22sp"
          />

      <ImageView
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:layout_gravity="center"
          app:srcCompat="@drawable/ic_play_button"
          />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingBottom="16dp"
          android:paddingLeft="14dp"
          android:paddingTop="16dp"
          android:text="Popular near you"
          android:textAllCaps="true"
          android:textColor="#000"
          android:textSize="18sp"
          />

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="vertical"
            >

          <android.support.v7.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="150dp"
              app:cardBackgroundColor="#FFF"
              app:cardCornerRadius="5dp"
              app:cardElevation="5dp"
              app:cardPreventCornerOverlap="true"
              app:cardUseCompatPadding="true"
              >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/song_1"
                />

          </android.support.v7.widget.CardView>

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="5dp"
              android:text="When I'm gone "
              android:textColor="#212121"
              android:textSize="16sp"
              />


          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="5dp"
              android:text="Anna Kentrik"
              android:textSize="12sp"

              />


        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

          <android.support.v7.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="150dp"
              app:cardBackgroundColor="#FFF"
              app:cardCornerRadius="5dp"
              app:cardElevation="5dp"
              app:cardPreventCornerOverlap="true"
              app:cardUseCompatPadding="true"
              >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/song_2"
                />

          </android.support.v7.widget.CardView>

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="5dp"
              android:text="One more night"
              android:textColor="#212121"
              android:textSize="16sp"
              />


          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="5dp"
              android:text="Addam"
              android:textSize="12sp"
              />


        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

          <android.support.v7.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="150dp"
              app:cardBackgroundColor="#FFF"
              app:cardCornerRadius="5dp"
              app:cardElevation="5dp"
              app:cardPreventCornerOverlap="true"
              app:cardUseCompatPadding="true"
              >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/song_3"
                />

          </android.support.v7.widget.CardView>

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="5dp"
              android:text="Counting star"
              android:textColor="#212121"
              android:textSize="16sp"
              />


          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="5dp"
              android:text="One Public"
              android:textSize="12sp"

              />


        </LinearLayout>

      </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingBottom="16dp"
          android:paddingLeft="14dp"
          android:paddingTop="16dp"
          android:text="Trending world wide"
          android:textAllCaps="true"
          android:textColor="#000"
          android:textSize="18sp"

          />

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="vertical"
            >

          <android.support.v7.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="150dp"
              app:cardBackgroundColor="#FFF"
              app:cardCornerRadius="5dp"
              app:cardElevation="5dp"
              app:cardPreventCornerOverlap="true"
              app:cardUseCompatPadding="true"
              >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/song_4"
                />

          </android.support.v7.widget.CardView>

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="5dp"
              android:text="When I'm gone "
              android:textColor="#212121"
              android:textSize="16sp"
              />


          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="5dp"
              android:text="Anna Kentrik"
              android:textSize="12sp"

              />

        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

          <android.support.v7.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="150dp"
              app:cardBackgroundColor="#FFF"
              app:cardCornerRadius="5dp"
              app:cardElevation="5dp"
              app:cardPreventCornerOverlap="true"
              app:cardUseCompatPadding="true"
              >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/song_5"
                />

          </android.support.v7.widget.CardView>

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="5dp"
              android:text="One more night"
              android:textColor="#212121"
              android:textSize="16sp"
              />


          <TextView
              android:id="@+id/textView3"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="5dp"
              android:text="Addam"
              android:textSize="12sp"
              />

        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

          <android.support.v7.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="150dp"
              app:cardBackgroundColor="#FFF"
              app:cardCornerRadius="5dp"
              app:cardElevation="5dp"
              app:cardPreventCornerOverlap="true"
              app:cardUseCompatPadding="true"
              >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/song_6"
                />

          </android.support.v7.widget.CardView>

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="5dp"
              android:text="Counting star"
              android:textColor="#212121"
              android:textSize="16sp"
              />

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="5dp"
              android:text="Public"
              android:textSize="12sp"

              />

        </LinearLayout>

      </LinearLayout>

    </LinearLayout>
  </LinearLayout>
</ScrollView>