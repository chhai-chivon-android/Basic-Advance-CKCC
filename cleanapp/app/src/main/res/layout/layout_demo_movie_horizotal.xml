<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >
  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="250dp"
      app:cardBackgroundColor="@color/dark"
      app:cardCornerRadius="5dp"
      app:cardElevation="5dp"
      app:cardPreventCornerOverlap="true"
      >
    <ImageView
        android:id="@+id/bg_movie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/song_1"
        />

    <com.nuon.peter.demoapp.utils.views.slantextview.SlantedTextView
        android:id="@+id/rating"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:slantedBackgroundColor="@color/md_deep_purple_A700"
        app:slantedTextSize="18sp"
        app:slantedLength="50dp"
        app:slantedTextColor="@color/white"
        app:slantedMode="left"
        android:layout_gravity="left"
        />
  </android.support.v7.widget.CardView>
  <TextView
      android:id="@+id/title"
      android:layout_gravity="center"
      android:gravity="center"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="5dp"
      android:textColor="@color/md_white_1000"
      android:maxLines="1"
      android:ellipsize="end"
      android:text="Beauty and Beast"
      android:textSize="18sp"
      />
</LinearLayout>