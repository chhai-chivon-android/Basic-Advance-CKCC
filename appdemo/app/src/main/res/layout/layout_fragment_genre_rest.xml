<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <include
      layout="@layout/widget_toolbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      />

  <android.support.design.widget.TabLayout
      android:id="@+id/smarttab_genres_list"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      app:tabBackground="@color/colorPrimary"
      app:tabTextColor="@color/md_white_1000"
      app:tabIndicatorColor="@color/md_white_1000"
      app:tabMode="scrollable"
      app:tabIndicatorHeight="3dp"
      app:tabSelectedTextColor="@color/grey" />
  />

  <android.support.v4.view.ViewPager
      android:id="@+id/viewpager_movies_list"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/alpha_85_black"
      >
  </android.support.v4.view.ViewPager>

</LinearLayout>